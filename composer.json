{
    "name": "nextcloud/drivermanager",
    "description": "A comprehensive Nextcloud app to manage driver information and track license expiry dates",
    "type": "project",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Fabrizio Mazzoni",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "nextcloud/coding-standard": "^1.0",
        "phpunit/phpunit": "^9.5",
        "psalm/phar": "^4.0"
    },
    "scripts": {
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "psalm": "psalm --no-cache",
        "test:unit": "phpunit --configuration tests/phpunit.xml"
    },
    "autoload": {
        "psr-4": {
            "OCA\\DriverManager\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OCA\\DriverManager\\Tests\\": "tests/"
        }
    }
}
