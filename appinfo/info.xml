    <version>2.0.0</version>
    <licence>agpl</licence>
    <author mail="your.email@example.com">Fabrizio Mazzoni</author>
    <namespace>DriverManager</namespace>
    <category>organization</category>
    <website>https://github.com/yourusername/nextcloud-drivermanager</website>
